<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/activity_page"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_bg"
        android:id="@+id/titlebar_update_debit_card">

        <ImageButton style="@style/topbar_return_img1" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="更改结算卡" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar_update_debit_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"

                >

                <TextView
                    android:id="@+id/update_merchan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈凯凯"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/update_merchan_card_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="6464628**********092"
                    android:textSize="19sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="13dp"
                android:background="#FAFAFA"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户名称"
                android:textSize="14sp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/update_debit_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请填写储蓄卡号"
                    android:textSize="14sp"
                    android:gravity="center_vertical|left"
                    android:textColor="#999999"
                    android:layout_weight="3"
                    android:background="@color/white"
                    />


                <Button
                    android:id="@+id/btn_updatedebit_no"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/creditcard_verifed_scan"
                    android:textColor="@color/color_508FF7"
                    android:textSize="12sp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="13dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行"
                android:textSize="14sp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/update_debit_card_open_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="16dp"
                android:textColor="#999999"
                android:hint="点击此处识别开户行"
                android:layout_weight="3"
                android:background="@color/white"
                />

            <View style="@style/divider_horizontal_1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="13dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行省市"
                android:textSize="14sp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/update_debit_card_open_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="16dp"
                android:textColor="#999999"
                android:hint="请选择开户行省市"
                android:layout_weight="3"
                android:background="@color/white"
                />

            <View style="@style/divider_horizontal_1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="13dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行分行"
                android:textSize="14sp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/update_debit_card_open_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="310123123123123"
                android:textSize="16sp"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="16dp"
                android:textColor="#999999"
                android:layout_weight="3"
                android:hint="请选择开户行分行"
                android:background="@color/white"
                />

            <View style="@style/divider_horizontal_1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="13dp"
                />




            <Button
                android:id="@+id/btn_updatedebit_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentBottom="true"
                style="@style/btn_next_style_red"
                android:text="修改结算卡"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>