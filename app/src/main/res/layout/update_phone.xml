<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/activity_page">

    <RelativeLayout style="@style/topbar_bg"
        android:id="@+id/titlebar_update_phone"
        >

        <ImageButton style="@style/topbar_return_img1"
            android:onClick="onReturnClick"/>

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="修改手机号" />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar_update_phone"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/update_phone_ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View style="@style/divider_horizontal_item_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原手机号"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_update_phone_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxLength="15"
                    android:paddingBottom="5dp"
                    android:paddingTop="17dp"
                    android:background="@color/white"
                    android:text="请输入您的手机号码"
                    android:textColor="#B3B9C5"
                    android:textSize="12sp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_update_phone_old_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="6"
                    android:background="@color/white"
                    android:text=""
                    android:textColor="#B3B9C5"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bt_update_phone_old_verification_code_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="验证码"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:paddingLeft="13dp"
                android:paddingRight="30dp"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btn_update_phone1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_btn_red"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/update_phone_ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <View style="@style/divider_horizontal_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手机号"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_update_phone_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxLength="15"
                    android:paddingBottom="5dp"
                    android:paddingTop="17dp"
                    android:background="@color/white"
                    android:text="请输入您的手机号码"
                    android:textColor="#B3B9C5"
                    android:textSize="12sp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_update_phone_new_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="#B3B9C5"
                    android:layout_weight="6"
                    android:background="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bt_update_phone_new_verification_code_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="验证码"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:paddingLeft="13dp"
                android:paddingRight="30dp"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btn_update_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_btn_red"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



