<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_A6black"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="@integer/int_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="@integer/int_3"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dimen_22"
                android:text="@string/cancel"
                android:textColor="@color/button_normal"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dimen_22"
                android:text="@string/confirm"
                android:textColor="@color/button_normal"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/option_date"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_line_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80"
            android:paddingHorizontal="@dimen/dimen_21">

            <TextView
                android:id="@+id/start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingHorizontal="@dimen/dimen_29"
                android:text="2019-08-28"
                android:textColor="@drawable/time_selector_color"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_1"
                android:layout_below="@+id/start_tv"
                android:layout_alignLeft="@+id/start_tv"
                android:layout_alignRight="@+id/start_tv"
                android:background="@color/color_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="è‡³"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/end_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingHorizontal="@dimen/dimen_29"
                android:text="2019-08-28"
                android:textColor="@drawable/time_selector_color"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_1"
                android:layout_below="@+id/end_tv"
                android:layout_alignLeft="@+id/end_tv"
                android:layout_alignRight="@+id/end_tv"
                android:background="@color/color_black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_line_bg" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:theme="@android:style/Theme.Holo.Light" />
    </LinearLayout>

</LinearLayout>